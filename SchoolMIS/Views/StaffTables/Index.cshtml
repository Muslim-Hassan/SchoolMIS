@model IEnumerable<SchoolMIS.Models.StaffTable>
@{
    String creation = "hidden";
    String deletion = "hidden";
    String edition = "hidden";
    String details = "hidden";


    if (Session["UserId"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
    else
    {

        if (Session["UserType"].ToString() == "admin" || Session["UserType"].ToString() == "Admin" || Session["UserType"].ToString() == "ادمین" || Session["UserType"].ToString() == "اډمین")
        {


            creation = "show";
            edition = "show";
            details = "show";
            deletion = "show";


        }
        else
        {

            details = "show";

        }
    }
}
<div class="d-flex justify-content-md-between pt-2">
    <h4><b>د اداری کارکوونکی معلومات</b></h4>

    <p class="btn btn-group">
        <a href="@Url.Action("Dashboard","Home")" class="btn btn-primary"> کور صفحه</a>
        <a href="@Url.Action("Create","StaffTables")" class="btn btn-success @creation"> نوی معلومات اضافه کړئ</a>

    </p>

    <h4><b>Staff  Information</b></h4>
</div>

<div class="card shadow  pre-scrollable ">

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-active">
                    <tr>

                        <th>نوم</th>
                        <th>پلار نوم</th>
                        <th>وظیفه</th>
                        <th>شمیره</th>
                        <th>salry</th>
                        <th>تذکره</th>
                        <th>عکس </th>
                        <th>Action </th>
                    </tr>
                </thead>
                <tfoot class="table-active">
                    <tr>
                        <th>نوم</th>
                        <th>پلار نوم</th>
                        <th>وظیفه</th>
                        <th>شمیره</th>
                        <th>salry</th>
                        <th>تذکره</th>
                        <th>عکس </th>
                        <th>Action </th>
                    </tr>
                </tfoot>
                <tbody id="tbody">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FatherName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StaffTypeTable.Type)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contact)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.salary)

                            </td>
                         
                            <td>
                                @Html.DisplayFor(modelItem => item.IdentityCardID)
                            </td>


                            <td style="di;background-image: url('../../Content/img/@Path.GetFileName(item.image)');background-size:contain;background-repeat:no-repeat;height:20px;width:20px;background-position:center"></td>

                            <td>
                                <div class="btn-group">
                                    <a href="@Url.Action("Edit", "StaffTables", new { id = item.StaffID })" class="btn btn-primary fa fa-edit @edition "></a>

                                    <button class="btn btn-info btn-Details @details" data-id="@item.StaffID"><i class="fa fa-info text-white"></i></button>
                                    <button class="btn btn-danger btn-delete @deletion" data-id="@item.StaffID"><i class="fa fa-trash"></i></button>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
