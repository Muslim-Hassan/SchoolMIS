<script type="text/javascript"></script>
<script>
    $(document).ready(function () {
           //this is deletion section
       $('.btn-delete').click(function () {
         var id = $(this).data('id');
           $.ajax({

            url: '@Url.Action("Delete","StaffTables")',
            type: 'POST',
            data: { id: id },
            success: function (response) {
                if (response.success) {
                    alert(response.data.RegistrationDate)
                    $('#input').val(response.data.StaffID);
                    $('#DStaffName').text(response.data.Name);
                    $('#DFatherName').text(response.data.FatherName);
                    $('#DType').text(response.data.Stafftype);
                    $('#DIdentityCard').text(response.data.IdentityCardID);
                    $('#DEmail').text(response.data.Email);
                    $('#DContact').text(response.data.Contact);
                    $('#DisActive').text(response.data.Active);
                    $('#Dgender').text(response.data.gender);
                    $('#DUserType').text(response.data.Usertype);
                    $('#DDate').text(response.data.RegistrationDate);
                    $('#DC_Address').text(response.data.CurrentAddress);
                    $('#DP_Address').text(response.data.PermenentAddress);
                    $('#DGrade').text(response.data.Grade);
                    $('#DDepartment').text(response.data.Department);
                    $('#DimgShow').attr('src', response.data.Image);
                    //modal show
                    $('#deleteModal').modal('show');
                } else {
                    $("#resultMessage").html("<div class='alert alert-success'>" + response.msg + "</div>");
                }
            },
            error: function () {
              alert("errore")
            }
        });

       });
       //------------------------------ConfirmDeletion
       $('#submitbtn').click(function (e) {
          e.preventDefault();  // Prevent the default form submission
          var id=parseInt($('#input').val());
           $.ajax({
               url: '@Url.Action("ConDelete", "StaffTables")',
               type: 'POST',
               data: { id: id },  // Send the serialized data
               success: function (response) {
                   $("#resultMessage").html("<div class='alert alert-success'>" + "معلومات په کامیابۍ سره ختم شول" + "</div>");
                 window.location.href = response.redirectUrl;
        },
        error: function () {
            alert("error occured");
        }
    });
});
 //this is for detail----------------------------------
        $('.btn-Details').click(function () {
            var id = $(this).data('id');
            $.ajax({
                url: '@Url.Action("Details", "StaffTables")',
                type: 'POST',
                data: { id: id },
                success: function (response) {
                    if (response.success) {
                        alert(response.data.RegistrationDate)
                        $('#header').text(response.data.Name);
                        $('#StaffName').text(response.data.Name);
                        $('#FatherName').text(response.data.FatherName);
                        $('#Type').text(response.data.Stafftype);
                        $('#IdentityCard').text(response.data.IdentityCardID);
                        $('#Email').text(response.data.Email);
                        $('#isActive').text(response.data.Active);
                        $('#gender').text(response.data.gender);
                        $('#Contact').text(response.data.Contact);
                        $('#UserType').text(response.data.Usertype);
                        $('#Date').text(response.data.RegistrationDate);
                        $('#C_Address').text(response.data.CurrentAddress);
                        $('#P_Address').text(response.data.PermenentAddress);
                        $('#Grade').text(response.data.Grade);
                        $('#Department').text(response.data.Department);

                        $('#imgShow').attr('src', response.data.Image);




                        // Show the modal
