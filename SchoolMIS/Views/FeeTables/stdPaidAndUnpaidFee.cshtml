@{
    Layout = null;
}


<!DOCTYPE html>

<html dir="rtl">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StudentsByClassReport</title>
    <link href="~/Content/custom/customCSS.css" rel="stylesheet" />
    <link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Persian Datepicker CSS -->
    <link href="~/Content/persian-datepicker.min.css" rel="stylesheet" />
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Scripts/persian-date.min.js"></script>
    <script src="~/Scripts/persian-datepicker.min.js"></script>
</head>
<body class="p-4" style=" font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">

    <div class="container-fluid">

        <div class="col-12 d-flex flex-row justify-content-between  mb-3 p-3">

            <img src="~/Content/image/logo1.jpg" style="width:150px ;height:70px" />
            <div class="text-center">
                <h2><b> چاردیوال خصوصی ښوونځی </b></h2>
                <h4><b> د تاریخ او صنف په اساس  د فیسونو راپور  </b></h4>
            </div>
            <img src="~/Content/image/aei.jpg" style="width:100px;height:70px" />

        </div>
        <form action="/FeeTables/stdPaidAndUnpaidFee " method="post" class="hideInPrint">
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-2 bg-light border">
                            <label class=" mt-1 fw-bold">تاریخ څخه</label>
                        </div>
                        <div class="col-md-10">
                            <input type="text" name="fromDate" id="fromDate" class="form-control" />
                        </div>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-2 bg-light border">
                            <label class=" mt-1 fw-bold">تاریخ پوری</label>
                        </div>
                        <div class="col-md-10">
                            <input type="text" name="toDate" id="toDate" class="form-control" />
                        </div>

                    </div>
                </div>

            </div>
            <div class="row">

                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-2 bg-light border">
                            <label class=" mt-1 fw-bold"> صنف</label>
                        </div>
                        <div class="col-md-10">
                            @Html.DropDownList("ClassID", ViewBag.ClassList as SelectList, "ټولګی وټاکئ", new { @class = "form-control hideInPrint" })
                        </div>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-2 bg-light border">
                            <label class=" mt-1 fw-bold"> تادیی حالت</label>
                        </div>
                        <div class="col-md-10">
                            <select type="text" name="status" id="status" class="form-control">
                                <option value="paid"> هغه چی فیس یی ورکړی وی</option>
                                <option value="unpaid">هغه چی فیس یی نه دی ورکړی </option>
                            </select>
                        </div>

                    </div>
                </div>
            </div>
            <div class="row p-0 mt-3">

                <button type="submit" style="width:100%" id="printBtn" class="btn btn-primary">  جوړ کړئ </button>


            </div>



        </form>
        <script>
            $(document).ready(function () {
                $("#fromDate").persianDatepicker({
                    format: 'YYYY/MM/DD',
                    autoClose: true
                });

                $("#toDate").persianDatepicker({
                    format: 'YYYY/MM/DD',
                    autoClose: true
                });
            });
        </script>
        <div class="row mb-3 fw-bold">

            <h4>د هغه شاګردانو راپور چی د [@ViewBag.fromDate] څخه [ @ViewBag.toDate] پوری یی فیسونه @ViewBag.msg</h4>

        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                        <thead class="table-active">
                            <tr>
                                <th>اساس</th>
                                <th>شاګرد </th>
                                <th>پلار نوم </th>
                                <th>نیکه نوم </th>

                                <th>شماره </th>
                            
                                <th>فیس </th>

                            </tr>
                        </thead>

                        <tbody id="tbody">
                            @if (ViewBag.PaidStudents != null)
                            {
                                foreach (var student in ViewBag.PaidStudents)
                                {
                                    <tr>
                                        <td>@student.RollNO</td>
                                        <td>@student.Name</td>
                                        <td>@student.FatherName</td>
                                        <td>@student.GrandFatherName</td>
                                        <td>@student.Contact</td>
                                      
                                        <td>@ViewBag.Fee</td>
                                    </tr>
                                }

                            }
                            @if(ViewBag.NotPaidStudents !=null)
                            {
                                foreach (var student in ViewBag.NotPaidStudents)
                                {
                                    <tr>
                                        <td>@student.RollNO</td>
                                        <td>@student.Name</td>
                                        <td>@student.FatherName</td>
                                        <td>@student.GrandFatherName</td>
                                        <td>@student.Contact</td>
                                    
                                        <td>@ViewBag.Fee</td>




                                    </tr>
                                }
                            }
                            <tr>
                                <td><b>مجموعه فیسونه</b></td>
                                <td>@ViewBag.feecollection</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
        <div class="col-12  d-flex flex-row justify-content-center" dir="ltr">

            <div>
                <a href="@Url.Action("Dashboard","Home")" id="printBtn" class="btn btn-success">کور پاڼی ته شاتګ </a>
                <a class="btn btn-primary " id="printBtn" onclick="window.print()">PDFذخیره کړئ</a>
                <a class="btn btn-primary " id="printBtn" onclick="window.print()"> راپور پرنټ کړئ</a>
            </div>
        </div>
    </div>




</body>
</html>

