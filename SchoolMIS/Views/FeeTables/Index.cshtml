<script type="text/javascript"></script>
<script>
    $(document).ready(function () {
           //this is deletion section
       $('.btn-delete').click(function () {
         var id = $(this).data('id');
           $.ajax({

            url: '@Url.Action("Delete","FeeTables")',
            type: 'POST',
            data: { id: id },
            success: function (response) {
                if (response.success) {
                    //D is for delete modal
                    $('#input').val(response.data.FeeID);
                    $('#DFeeID').text(response.data.FeeID);
                    $('#DStudent').text(response.data.student);
                    $('#DFee').text(response.data.Amount);
                    $('#DDiscount').text(response.data.Discount);
                    $('#DRemain').text(response.data.Remain);
                    $('#DNetAmount').text(response.data.NetAmount);
                    $('#DStaff').text(response.data.staff);
                    $('#DDate').text(response.data.date);

                    //modal show
                    $('#deleteModal').modal('show');
                } else {
                    $("#resultMessage").html("<div class='alert alert-success'>" + response.msg + "</div>");
                }
            },
            error: function () {
              alert("errore")
            }
        });

       });
       //------------------------------ConfirmDeletion
       $('#submitbtn').click(function (e) {
          e.preventDefault();  // Prevent the default form submission
          var id=parseInt($('#input').val());
           $.ajax({
               url: '@Url.Action("ConDelete", "FeeTables")',
               type: 'POST',
               data: { id: id },  // Send the serialized data
               success: function (response) {
                 $("#resultMessage").html("<div class='alert alert-success'>" + response.msg + "</div>");
                 window.location.href = response.redirectUrl;
        },
        error: function () {
            alert("error occured");
        }
    });
});
