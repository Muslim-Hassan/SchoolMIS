@model IEnumerable<SchoolMIS.Models.FeeTable>

@{
    String Actions = "hidden";
    String creation = "hidden";

    if (Session["UserId"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
    else
    {

        if (Session["UserType"].ToString() == "admin" || Session["UserType"].ToString() == "Admin" || Session["UserType"].ToString() == "ادمین" || Session["UserType"].ToString() == "اډمین")
        {


            creation = "show";
            Actions = "show";

        }
        else
        {

            creation = "show";
        }

    }
}

 <!-- Replace with your actual namespace -->




<div class="d-flex justify-content-md-between pt-2">
    <style>
        .left {
            float: left;
        }

        .right {
            float: right;
        }
    </style>
    <h4><b>د  فیسونو معلومات</b></h4>

    <p class="btn btn-group">
        <a href="@Url.Action("Dashboard","Home")" class="btn btn-primary"> کور صفحه</a>
        <a href="@Url.Action("Create","FeeTables")" class="btn btn-success @creation"> نوی معلومات اضافه کړئ</a>

    </p>
    <h4><b>Fee  Information</b></h4>
</div>

<div class="card shadow  pre-scrollable ">

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-active">
                    <tr>
                        <th>اساس</th>
                        <th>شاګرد </th>
                        <th>فیس </th>
                        <th>تخفیف</th>
                        <th>میاشت</th>
                        <th>مجموعه</th>
                        <th>code</th>
                        <th>استاذ</th>
                        <th>تاریخ </th>
                        <th class="@Actions">Action </th>
                    </tr>
                </thead>
                <tfoot class="table-active">
                    <tr>
                        <th>اساس</th>
                        <th>شاګرد </th>
                        <th>فیس </th>
                        <th>تخفیف</th>
                        <th>میاشت</th>
                        <th>مجموعه</th>
                        <th>code</th>
                        <th>استاذ</th>
                        <th>تاریخ </th>
                        <th class="@Actions">Action </th>
                    </tr>
                </tfoot>
                <tbody id="tbody">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentTable.RollNO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Discount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.month)

                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NetAmount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReciptNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StaffTable.Name)

                            </td>
                            <td>
                                @*@item.PaidDate.ToString("yyyy/MM/dd")*@
                                @SchoolMIS.Models.Converssion.ToShamsi(item.PaidDate)
                            </td>
                            <td class="@Actions">
                                <div class="btn-group ">
                                    <a href="@Url.Action("Edit", "FeeTables", new { id = item.FeeID })" class="btn btn-primary fa fa-edit "></a>
                                    @*<button class="btn btn-info btn-Details" data-id="@item.FeeID"><i class="fa fa-info"></i></button>*@
                                    <button class="btn btn-danger btn-delete " data-id="@item.FeeID"><i class="fa fa-trash"></i></button>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@* delete model*@
<div id="deleteModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white d-flex justify-content-between align-content-center border-dark">
                <img src="~/Content/image/logo1.jpg" style="width:40px;border-radius:50%;" />

                <h4 class="modal-title text-center px-2"><b> ایا غواړۍ فیس  معلومات لمنځه یوسی؟</b></h4>


            </div>
            <div class="modal-body">
                @* this is alert section*@
                <div id="resultMessage"></div>
                <div class="row">

                    <div class="col-6 card p-3 shadow">
                        <p><span id="DFeeID" class="left"></span><strong class="right">شماره :</strong> </p>
                        <hr class="m-0 p-0" />
                        <p><span id="DDate" class="left"></span><strong class="right">تاریخ :</strong> </p>
                        <hr class="m-0 p-0" />
                        <p><span id="DNetAmount" class="left"></span><strong class="right">مجموعه :</strong> </p>
                        <hr class="m-0 p-0" />
                        <p><span id="DStaff" class="left"></span><strong class="right"> : استاذ</strong> </p>
                    </div>
                    <div class="col-6 card p-3 shadow">
                        <p><span id="DStudent" class="left"></span><strong class="right">شاګرد : </strong> </p>
                        <hr class="m-0 p-0" />
                        <p><span id="DFee" class="left"></span><strong class="right">فیس :   </strong> </p>
                        <hr class="m-0 p-0" />
                        <p> <span id="DDiscount" class="left"></span><strong class="right">تخفیف : </strong></p>
                        <hr class="m-0 p-0" />
                        <p> <span id="DRemain" class="left"></span><strong class="right">باقی : </strong></p>
                    </div>

                </div>

            </div>
            <div class="modal-footer bg-danger text-white">
                <form id="deleteForm">
                    <input type="hidden" id="input" />
                    <button type="submit" class="btn btn-primary" id="submitbtn">هو</button>
                </form>
                <button type="button" class="btn btn-secondary pe-2" data-bs-dismiss="modal"> نه</button>
            </div>
        </div>
    </div>
</div>

