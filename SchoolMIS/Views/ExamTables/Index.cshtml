@model IEnumerable<SchoolMIS.Models.ExamTable>
@{
    String deletion = "hidden";
    String creation = "hidden";
    String edition = "hidden";
    if (Session["UserId"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
    else
    {

        if (Session["UserType"].ToString() == "admin" || Session["UserType"].ToString() == "Admin" || Session["UserType"].ToString() == "ادمین" || Session["UserType"].ToString() == "اډمین")
        {

            deletion = "show";
            creation = "show";
            edition = "show";

        }
        else
        {

            creation = "show";



        }

    }
}
<style>
    .left{float:left;}
    .right{float:right;}
</style>
<div class="d-flex justify-content-md-between pt-2">
    <h4><b>د  امتحاناتو معلومات</b></h4>

    <p class="btn btn-group">
        <a href="@Url.Action("Dashboard","Home")" class="btn btn-primary"> کور صفحه</a>
        <a href="@Url.Action("Create","ExamTables")" class="btn btn-success @creation"> نوی معلومات اضافه کړئ</a>

    </p>
    <h4><b>Exams  Information</b></h4>
</div>
<div class="card shadow  pre-scrollable ">

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-active">
                    <tr>

                        <th>امتحان</th>
                        <th>مضمون</th>
                        <th>صنف</th>
                        <th>شاګرد</th>
                        <th>استاذ</th>
                        <th>تاریخ</th>
                        <th>نمری </th>
                        <th>Action </th>
                    </tr>
                </thead>
                <tfoot class="table-active">
                    <tr>

                        <th>امتحان</th>
 <th>مضمون</th>
 <th>صنف</th>
 <th>شاګرد</th>
 <th>استاذ</th>
 <th>تاریخ</th>
 <th>نمری </th>
 <th>Action </th>
                    </tr>
                </tfoot>
                <tbody id="tbody">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExamType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubjectTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StaffTable.Name)

                            </td>
                            <td>
                                @SchoolMIS.Models.Converssion.ToShamsi(item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AbtainScore)
                            </td>

                            <td>
                                <div class="btn-group">
                                    <a href="@Url.Action("Edit", "ExamTables", new { id = item.ExamID })" class="btn btn-primary fa fa-edit @edition"></a>
                                 
                                    <button class="btn btn-info btn-Details " data-id="@item.ExamID"><i class="fa fa-info"></i></button>
                                    <button class="btn bg-danger btn-delete @deletion" data-id="@item.ExamID"><i class="fa fa-trash text-white"></i></button>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
