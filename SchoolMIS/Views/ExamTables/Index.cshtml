<script src="~/Scripts/jquery-3.7.0.min.js"></script>

<script type="text/javascript"></script>
<script>
    $(document).ready(function () {
           //this is deletion section
       $('.btn-delete').click(function () {
         var id = $(this).data('id');
           $.ajax({

            url: '@Url.Action("Delete","ExamTables")',
            type: 'POST',
            data: { id: id },
            success: function (response) {
                if (response.success) {
                    $('#input').val(response.data.ExamID);
                    $('#DExamType').text(response.data.ExamType);
                    $('#DStudent').text(response.data.student);
                    $('#DTeacher').text(response.data.staff);
                    $('#DSubject').text(response.data.subject);
                    $('#DClass').text(response.data.className);
                    $('#DwrittenTest').text(response.data.writtenTest);
                    $('#DverbalTest').text(response.data.verbalTest);
                    $('#DClassWork').text(response.data.ClassWork);
                    $('#DhomeWork').text(response.data.homeWork);
                    $('#DDate').text(response.data.date);
                    $('#DTotalScore').text(response.data.TotalScore);
                    $('#DAbtainScore').text(response.data.AbtainScore);


                    //modal show
                    $('#deleteModal').modal('show');
                } else {
                    $("#resultMessage").html("<div class='alert alert-success'>" + response.msg + "</div>");
                }
            },
            error: function () {
              alert("errore")
            }
        });

       });
       //------------------------------ConfirmDeletion
       $('#submitbtn').click(function (e) {
          e.preventDefault();  // Prevent the default form submission
          var id=parseInt($('#input').val());
           $.ajax({
               url: '@Url.Action("ConDelete", "ExamTables")',
               type: 'POST',
               data: { id: id },  // Send the serialized data
               success: function (response) {
                   $("#resultMessage").html("<div class='alert alert-success'>" + response.msg + "</div>");
                 window.location.href = response.redirectUrl;
        },
        error: function () {
            alert("error occured");
        }
    });
});
 //this is for detail----------------------------------
        $('.btn-Details').click(function () {
            var id = $(this).data('id');
            $.ajax({
                url: '@Url.Action("Details", "ExamTables")',
                type: 'POST',
                data: { id: id },
                success: function (response) {
                    if (response.success) {
                        $('#header').text(response.data.student);
                        $('#ExamType').text(response.data.ExamType);
                        $('#Student').text(response.data.student);
                        $('#Teacher').text(response.data.staff);
                        $('#subject').text(response.data.subject);
                        $('#Class').text(response.data.className);
                        $('#writtenTest').text(response.data.writtenTest);
                        $('#verbalTest').text(response.data.verbalTest);
                        $('#ClassWork').text(response.data.ClassWork);
                        $('#homeWork').text(response.data.homeWork);
                        $('#Date').text(response.data.date);
                        $('#TotalScore').text(response.data.TotalScore);
                        $('#AbtainScore').text(response.data.AbtainScore);


                        // Show the modal
                        $('#detailsModal').modal('show');
                    } else {
                        alert("errore occurd")
                    }
                },
                error: function () {
                    alert('An error occurred while fetching the details.');
                }
            });
        });
});
</script>
