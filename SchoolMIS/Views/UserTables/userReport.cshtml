@model IEnumerable<SchoolMIS.Models.UserTable>

@{
    Layout = null;
}

<!DOCTYPE html>

<html dir="rtl">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StudentsByClassReport</title>
    <link href="~/Content/custom/customCSS.css" rel="stylesheet" />
    <link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
</head>
<body style=" font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;">

    <div class="container-fluid">

        <div class="col-12 d-flex flex-row justify-content-between  mb-3 p-3">

            <img src="~/Content/image/logo1.jpg" style="width:150px ;height:70px" />
            <div class="text-center">
                <h2><b>چاردیوال خصوصی ښوونځی</b></h2>
                <h4><b>د  سیستم استعمالوونکو  راپور  </b></h4>
            </div>
            <img src="~/Content/image/aei.jpg" style="width:100px;height:60px" />

        </div>
        <h4>د @ViewBag.ClassName د استعمالوونکو راپور</h4>
        <div class="row">
            <div class="table-responsive">
                <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-active">
                        <tr>
                    <th>
                        نوم
                    </th>
                    <th>
                        کود
                    </th>
                    <th>
                        استعمالوونکی ډول
                    </th>
                    <th>
                        تصویر
                    </th>
</tr>
                    </thead>

                    <tbody id="tbody">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Password)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserTypeTable.Type)
                                </td>
                                <td> <img src="~/Content/img/@Path.GetFileName(item.Image)" style="width:30px" /></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>





        </div>
        <div class="col-12  d-flex flex-row justify-content-center" dir="ltr">

            <div>
                <a href="@Url.Action("Dashboard","Home")" class="btn btn-success hideInPrint">کورپاڼی ته شاتګ </a>
                <a class="btn btn-primary hideInPrint " onclick="window.print()">راپور پرنټ ګړئ </a>
                <a class="btn btn-primary hideInPrint " onclick="window.print()">PDF ذخیره کړئ </a>
            </div>
        </div>
    </div>


</body>
</html>


