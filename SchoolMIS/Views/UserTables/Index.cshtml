@model IEnumerable<SchoolMIS.Models.UserTable>


<div class="d-flex justify-content-md-between pt-2 ">
    <h4><b>د استعمالوونکی معلومات</b></h4>

    <p class="btn btn-group">

        @Html.ActionLink("   کور صفحه ", "Dashboard", "Home", null, new { @class = "btn btn-primary" })
        @Html.ActionLink(" نوی معلومات اضافه کړئ", "Create", null, new { @class = "btn btn-success" })
    </p>
    <h4><b>User  Information</b></h4>
  
</div>
<style>
    .left{float:left;}
    .right{float:right;}
</style>

    <div class="card shadow  pre-scrollable">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-active">
                        <tr>
                            <th>شماره</th>
                            <th>نوم</th>
                            <th>کوډ</th>
                            <th>ډول</th>
                            <th>عکس</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot class="table-active">
                        <tr>
                            <th>شماره</th>
                            <th>نوم</th>
                            <th>کوډ</th>
                            <th>ډول</th>
                            <th>عکس</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody id="tbody">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Password)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserTypeTable.Type)
                                </td>
                                <td style="di;background-image: url('../../Content/img/@Path.GetFileName(item.Image)');background-size:contain;background-repeat:no-repeat;height:20px;width:20px;background-position:center"></td>

                                <td>
                                    <div class="btn-group">
                                        @Html.ActionLink(" ", "Edit", "UserTables", new { id = item.UserID }, new { @class = "btn btn-primary fa fa-edit" })
                                        @*<button class="btn btn-info btn-Details" data-id="@item.UserID"><i class="fa fa-info"></i></button>*@
                                        <button class="btn btn-danger btn-delete" data-id="@item.UserID"><i class="fa fa-trash"></i></button>
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

@* delete model*@
<div id="deleteModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white d-flex justify-content-between align-content-center border-dark">

                <img src="~/Content/image/logo1.jpg" style="width:40px;border-radius:50%;" />
                <h4 class="modal-title text-center px-2"><b> ایا غواړی چی استعمالوونکی لمنځه یوسی؟</b></h4>


            </div>
            <div class="modal-body px-4">
                @* this is alert section*@
                <div id="resultMessage"></div>
                <div class="row">

                    <div class="col-5 ">

                        <img src="" style="width:150px;height:150px;border-radius:10%;border:1px solid black" id="imgShow" />
                    </div>
                    <div class="col-7 ">


                        <p><span id="user" class="left"></span><strong class="right">نوم :</strong> </p>
                        <hr /><br />
                        <p> <span id="password" class="left"></span><strong class="right">کوډ :</strong></p>
                        <hr  /><br />
                        <p><span id="Type" class="left"></span><strong class="right">ډول :</strong> </p>

                    </div>
                </div>

            </div>
            <div class="modal-footer bg-danger text-white">
                <form id="deleteForm">
                    <input type="hidden" id="input" />
                    <button type="submit" class="btn btn-primary" id="submitbtn">هو</button>
                </form>
                <button type="button" class="btn btn-secondary pe-2" data-bs-dismiss="modal"> نه</button>
            </div>
        </div>
    </div>
</div>

