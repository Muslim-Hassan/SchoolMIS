                    <button type="button" class="btn btn-secondary pe-2" data-bs-dismiss="modal">شا تګ</button>
                </div>
            </div>
        </div>
    </div>

<script src="~/Scripts/jquery-3.7.0.min.js"></script>

<script type="text/javascript"></script>
<script>
    $(document).ready(function () {
           //this is deletion section
       $('.btn-delete').click(function () {
         var id = $(this).data('id');
           $.ajax({

            url: '@Url.Action("Delete","IncomeTables")',
            type: 'POST',
            data: { id: id },
            success: function (response) {
                if (response.success) {
                    $('#input').val(response.data.IncomeID);
                    $('#DIncomeID').text(response.data.IncomeID);
                    $('#DItemName').text(response.data.Name);
                    $('#DAmount').text(response.data.Amount);
                    $('#DPrice').text(response.data.price);
                    $('#DDiscount').text(response.data.Discount);
                    $('#DNetAmount').text(response.data.NetAmount);
                    $('#DStaff').text(response.data.staff);
                    $('#DDate').text(response.data.date);
                    $('#DDescription').text(response.data.Description);

                    //modal show
                    $('#deleteModal').modal('show');
                } else {
                    $("#resultMessage").html("<div class='alert alert-success'>" + response.msg + "</div>");
                }
            },
            error: function () {
              alert("errore")
            }
        });

       });
       //------------------------------ConfirmDeletion
       $('#submitbtn').click(function (e) {
          e.preventDefault();  // Prevent the default form submission
          var id=parseInt($('#input').val());
           $.ajax({
               url: '@Url.Action("ConDelete", "IncomeTables")',
               type: 'POST',
               data: { id: id },  // Send the serialized data
               success: function (response) {
                 $("#resultMessage").html("<div class='alert alert-success'>" + response.msg + "</div>");
                 window.location.href = response.redirectUrl;
        },
        error: function () {
            alert("error occured");
        }
    });
});
 //this is for detail----------------------------------
        $('.btn-Details').click(function () {
            var id = $(this).data('id');
            $.ajax({
                url: '@Url.Action("Details", "IncomeTables")',
                type: 'POST',
                data: { id: id },
                success: function (response) {
                    if (response.success) {
                        $('#header').text(response.data.Name);
                        $('#IncomeID').text(response.data.IncomeID);
                        $('#ItemName').text(response.data.Name);
                        $('#Amount').text(response.data.Amount);
                        $('#Price').text(response.data.price);
                        $('#Discount').text(response.data.Discount);
                        $('#NetAmount').text(response.data.NetAmount);
                        $('#Staff').text(response.data.staff);
                        $('#Date').text(response.data.date);
                        $('#Description').text(response.data.Description);
                        // Show the modal
                        $('#detailsModal').modal('show');
                    } else {
                        alert("errore occurd")
                    }
                },
                error: function () {
                    alert('An error occurred while fetching the details.');
                }
            });
        });
});
</script>
