@model IEnumerable<SchoolMIS.Models.SalaryTable>

<div class="d-flex justify-content-md-between  py-2">
    <h4><b>د معاشاتو  معلومات</b></h4>

    <p class="btn btn-group">
        @Html.ActionLink("   کور صفحه ", "Dashboard", "Home", null, new { @class = "btn btn-primary" })
        @Html.ActionLink(" نوی معلومات اضافه کړئ", "Create", null, new { @class = "btn btn-success" })

    </p>
    <h4><b> Salaries Information</b></h4>
</div>
<style>
    .left{float:left;}
    .right{float:right;}
</style>
<div>
    <!-- DataTales Example -->
    <div class="card shadow  pre-scrollable ">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-active">
                        <tr>
                            <th>شماره</th>
                            <th>اداری</th>
                            <th>میاشت</th>
                            <th>اندازه</th>
                            <th>تادیه شوی</th>
                            <th>باقی</th>
                            <th>code</th>

                            <th>تادیه تاریخ </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot class="table-active">
                        <tr>
                            <th>شماره</th>
                            <th>اداری</th>
                            <th>میاشت</th>
                            <th>اندازه</th>
                            <th>تادیه شوی</th>
                            <th>باقی</th>
                            <th>code</th>

                            <th>تادیه تاریخ </th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody id="tbody">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SalaryID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StaffTable.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Month)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.paidAmount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.remain)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReciptNo)

                                </td>

                                <td>
                                    @{
                                        DateTime dateTime = item.PaidDate ?? DateTime.Now;
                                        @SchoolMIS.Models.Converssion.ToShamsi(dateTime)
                                    }

                                </td>
                                <td>
                                    <div class="btn-group">
                                        @Html.ActionLink(" ", "Edit", "SalaryTables", new { id = item.SalaryID }, new { @class = "btn btn-primary fa fa-edit" })
                                        @*<button class="btn btn-info btn-Details" data-id="@item.SalaryID"><i class="fa fa-info"></i></button>*@
                                        <button class="btn btn-danger btn-delete" data-id="@item.SalaryID"><i class="fa fa-trash"></i></button>
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





@* delete model*@
<div id="deleteModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white d-flex justify-content-between align-content-center border-dark">
                <img src="~/Content/image/logo1.jpg" style="width:40px;border-radius:50%;" />

                <h4 class="modal-title text-center px-2"><b> ایا غواړی چی معاش معلومات  لمنځه یوسی؟</b></h4>


            </div>
            <div class="modal-body px-4">

                @* this is alert section*@
                <div id="resultMessage"></div>
                <div class="row">
                    <div class="col-md-6 card">
                        <p><span id="DStaff" class="left"></span><strong class="right">اداری کارکوونکی :  </strong> </p>
                        <hr class="p-0 m-0" />
                        <p> <span id="DMonth" class="left"></span><strong class="right">میاشت :  </strong></p>
                        <hr class="p-0 m-0" />
                        <p><span id="DAmount" class="left"></span><strong class="right">معاش اندازه :  </strong> </p>
                    </div>
                    <div class="col-md-6 card">
                        <p><span id="DpaidAmount" class="left"></span><strong class="right">تادیه شوی اندازه :  </strong> </p>
                        <hr class="p-0 m-0" />
                        <p><span id="Dremain" class="left"></span><strong class="right">باقی اندازه :  </strong> </p>
                        <hr class="p-0 m-0" />
                        <p> <span id="DDate" class="left"></span><strong class="right">ورکړی تاریخ : </strong></p>
                    </div>
                </div>
               
              
             
              


            </div>
            <div class="modal-footer bg-danger text-white">
                <form id="deleteForm">
                    <input type="hidden" id="input" />
                    <button type="submit" class="btn btn-primary" id="submitbtn">هو</button>
                </form>
                <button type="button" class="btn btn-secondary pe-2" data-bs-dismiss="modal"> نه</button>
            </div>
        </div>
    </div>
</div>
