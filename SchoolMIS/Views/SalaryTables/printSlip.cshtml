@model SchoolMIS.Models.SalaryTable

@{
    Layout = null;
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/custom/customCSS.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.bundle.min.js"></script>

<body style="font-family:Arial">
    <div class="card" style="width:500px">
        <div class="card-header d-flex justify-content-md-between p-2 ">
            <img src="~/Content/image/aei.jpg" style="width:40px;height:40px" class="mt-1" />
            <h1><b>چاردیوال خصوصی ښوونځی</b></h1>
            <img src="~/Content/image/logo1.jpg" style="width: 50px; height: 50px" />

        </div>
        <div class="row card-body p-3 ">
            <div class="col-6 p-3">

                <p><strong class="me-2"> Name:</strong>@Model.StaffTable.Name</p>
                <p><strong class="me-2">FatherName:</strong>@Model.StaffTable.FatherName</p>
                <p><strong class="me-2">Job:</strong>@Model.StaffTable.StaffTypeTable.Type</p>
                <p><strong class="me-2">Amount:</strong>@Model.StaffTable.salary</p>
                <p><strong class="me-2">PaidAmount:</strong>@Model.paidAmount</p>
                <p><strong class="me-2">Principle Signatuer:<br /></strong>------------------------------</p>
            </div>
            <div class="col-6 p-3">
                <p><strong class="me-2">Salary:</strong>@Model.Amount</p>
                <p><strong class="me-2">Month:</strong>@Model.Month</p>
                <p><strong class="me-2">Remain:</strong>@Model.remain</p>
                <p><strong class="me-2">Recipt No:</strong>@Model.ReciptNo</p>
                <p>
                    <strong class="me-2">Date:</strong>  @{
                        DateTime dateTime = Model.PaidDate ?? DateTime.Now;
                        @SchoolMIS.Models.Converssion.ToShamsi(dateTime)
                    }
                </p>
                <p><strong class="me-2">Teacher Signatuer:<br /></strong>------------------------------</p>
            </div>
        </div>
    </div>
    <div class="btn-group " id="printBtn" >
        <button class="btn btn-primary" onclick="window.print()">print</button>
        <a class="btn btn-outline-success" href="@Url.Action("Index","SalaryTables")">close </a>
    </div>
</body>