                <img src="~/Content/image/logo1.jpg" style="width:40px;border-radius:50%;" />



            </div>
            <div class="modal-body">
                @* this is alert section*@
                <div id="resultMessage"></div>
                <div class="row">
                    <div class="col-md-6 d-flex flex-row justify-content-center  card shadow">
                        <img src=""  style="width: 243px; height: 160px; border-radius: 3%; border: 1px solid black" id="DFrontImage" />
                    </div>
                    <div class="col-md-6 d-flex flex-row justify-content-center  card shadow">
                        <img src="" style="width: 243px; height: 160px; border-radius: 3%; border: 1px solid black" id="DBackImage" />
                    </div>
                </div>
                <div class="row">

                    <div class="col-6 card p-3 shadow">
                        <p><span id="DStudent" class="left"></span><strong class="right">شاګرد :</strong> </p>
                        <hr class="m-0 p-0" />
                        <p><span id="DFatherName" class="left"></span><strong class="right">پلار نوم :</strong> </p>
                        <hr class="m-0 p-0" />
                        <p><span id="DFromSchool" class="left"></span><strong class="right">مکتب څخه : </strong> </p>
                      


                    </div>
                    <div class="col-6 card p-3 shadow">
                        <p><span id="DRollNo" class="left"></span><strong class="right">اساس :</strong> </p>
                        <hr class="m-0 p-0" />
                        <p><span id="DClass" class="left"></span><strong class="right">صنف :</strong> </p>
                        <hr class="m-0 p-0" />
                        <p><span id="DToSchool" class="left"></span><strong class="right">مکتب ته :  </strong> </p>
                        <hr class="m-0 p-0" />
                        <p><span id="DDate" class="left"></span><strong class="right"> تاریخ:</strong> </p>
                    

