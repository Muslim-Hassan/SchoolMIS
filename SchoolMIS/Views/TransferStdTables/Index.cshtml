<script src="~/Scripts/jquery-3.7.0.min.js"></script>

<script type="text/javascript"></script>
<script>
    $(document).ready(function () {
           //this is deletion section
       $('.btn-delete').click(function () {
         var id = $(this).data('id');
           $.ajax({

            url: '@Url.Action("Delete", "TransferStdTables")',
            type: 'POST',
            data: { id: id },
            success: function (response) {
                if (response.success) {
                    $('#input').val(response.data.TransferStdID);
                    $('#DDate').text(response.data.Date);
                    $('#DStudent').text(response.data.Name);
                    $('#DRollNo').text(response.data.RollNo);
                    $('#DFatherName').text(response.data.FatherName);
                    $('#DFromSchool').text(response.data.FromSchool);
                    $('#DClass').text(response.data.Class);
                    $('#DToSchool').text(response.data.ToSchool);
                    $('#DFrontImage').attr('src', response.data.FrontImage);
                    $('#DBackImage').attr('src', response.data.BackImage);

                    //modal show
                    $('#deleteModal').modal('show');
                } else {
                    $("#resultMessage").html("<div class='alert alert-success'>" + response.msg + "</div>");
                }
            },
            error: function () {
              alert("errore")
            }
        });

       });
       //------------------------------ConfirmDeletion
       $('#submitbtn').click(function (e) {
          e.preventDefault();  // Prevent the default form submission
          var id=parseInt($('#input').val());
           $.ajax({
               url: '@Url.Action("ConDelete", "TransferStdTables")',
               type: 'POST',
               data: { id: id },  // Send the serialized data
               success: function (response) {
                 $("#resultMessage").html("<div class='alert alert-success'>" + response.msg + "</div>");
                 window.location.href = response.redirectUrl;
        },
        error: function () {
            alert("error occured");
        }
    });
});
 //this is for detail----------------------------------
        $('.btn-Details').click(function () {
            var id = $(this).data('id');
            $.ajax({
                url: '@Url.Action("Details", "TransferStdTables")',
                type: 'POST',
                data: { id: id },
                success: function (response) {
                    if (response.success) {
                        $('#header').text(response.data.student);
                        $('#Date').text(response.data.Date);
                        $('#Student').text(response.data.Name);
                        $('#RollNo').text(response.data.RollNo);
                        $('#FatherName').text(response.data.FatherName);
                        $('#FromSchool').text(response.data.FromSchool);
                        $('#Class').text(response.data.Class);
                        $('#ToSchool').text(response.data.ToSchool);
                        $('#FrontImage').attr('src', response.data.FrontImage);
                        $('#BackImage').attr('src', response.data.BackImage);

                        // Show the modal
                        $('#detailsModal').modal('show');
                    } else {
                        alert("errore occurd")
                    }
                },
                error: function () {
                    alert('An error occurred while fetching the details.');
                }
            });
        });
});
</script>