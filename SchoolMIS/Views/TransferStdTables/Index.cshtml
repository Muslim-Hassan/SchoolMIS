@model IEnumerable<SchoolMIS.Models.TransferStdTable>
<div class="d-flex justify-content-md-between pt-2">
    <h4><b>د  شاګردانو سه پرچه </b></h4>

    <p class="btn btn-group">
        @Html.ActionLink("   کور صفحه ", "Dashboard", "Home", null, new { @class = "btn btn-primary" })
        @Html.ActionLink(" نوی معلومات اضافه کړئ", "Create", null, new { @class = "btn btn-success" })

    </p>
    <h4><b>Transfermation of Student </b></h4>
</div>
<style>
    .left{
        float:left;
    }
    .right {
        float: right;
    }
</style>
<div class="card shadow  pre-scrollable ">

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-active">
                    <tr>
                        <th>اساس</th>
                        <th>نوم</th>
                        <th>پلار نوم</th>
                        <th> صنف </th>
                        <th> مکتب څخه</th>
                        <th>مکتب ته</th>
                        <th>تاریخ</th>
                        <th>Action </th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>اساس</th>
                        <th>نوم</th>
                        <th>پلار نوم</th>
                        <th> صنف </th>
                        <th> مکتب څخه</th>
                        <th>مکتب ته</th>
                        <th>تاریخ</th>
                    
                        <th>Action </th>
                    </tr>
                </tfoot>
                <tbody id="tbody">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RollNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FatherName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FromSchool)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ToSchool)
                            </td>
                            <td>
                                @SchoolMIS.Models.Converssion.ToShamsi(item.Date)
                            </td>
                         
                            <td>
                                <div class="btn-group">
                                    @Html.ActionLink(" ", "Edit", "TransferStdTables", new { id = item.TransferStdID }, new { @class = "btn btn-primary fa fa-edit" })
                                    <button class="btn btn-info btn-Details" data-id="@item.TransferStdID"><i class="fa fa-info"></i></button>
                                    <button class="btn btn-danger btn-delete" data-id="@item.TransferStdID"><i class="fa fa-trash"></i></button>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@* delete model*@
