@model IEnumerable<SchoolMIS.Models.StudentTable>
@{
    String deletion = "hidden";
    String creation = "hidden";
    String edition = "hidden";

    if (Session["UserId"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
    else
    {

        if (Session["UserType"].ToString() == "admin" || Session["UserType"].ToString() == "Admin" || Session["UserType"].ToString() == "ادمین" || Session["UserType"].ToString() == "اډمین")
        {


            creation = "show";
            deletion = "show";
            edition = "show";

        }
      

    }
}
<div class="d-flex justify-content-md-between pt-2">
    <h4><b>د  شاګردانو معلومات</b></h4>

    <p class="btn btn-group">
        <a href="@Url.Action("Dashboard","Home")" class="btn btn-primary"> کور پاڼه</a>

        <a href="@Url.Action("Create","StudentTables")" class="btn btn-success @creation"> نوی معلومات اضافه کړئ</a>


    </p>
    <h4><b>Students  Information</b></h4>

</div>

    <div class="card shadow  pre-scrollable ">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-active">
                        <tr>
                            <th>اساس</th>
                            <th>نوم</th>
                            <th>پلارنوم</th>
                            <th> عمر</th>
                            <th>شمیره</th>
                            <th>صنف</th>
                            <th>عکس </th>
                            <th>Action </th>
                        </tr>
                    </thead>
                    <tfoot class="table-active">
                        <tr>
                            <th>اساس</th>
                            <th>نوم</th>
                            <th>پلارنوم</th>
                            <th> عمر</th>
                            <th>شمیره</th>
                            <th>صنف</th>
                            <th>عکس </th>
                            <th>Action </th>
                        </tr>
                    </tfoot>
                    <tbody id="tbody">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RollNO)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FatherName)
                                </td>
                              
                                <td>
                                    @{
                                        DateTime today = DateTime.Today;
                                        int age = today.Year -item.DOB.Year;
                                        if (item.DOB.Date > today.AddYears(-age))
                                        {
                                            ViewBag.age= age--;
                                        }
                                    }
                                    @ViewBag.age
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Contact)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ClassTable.Name)
                                </td>
                                <td style="di;background-image: url('../../Content/img/@Path.GetFileName(item.Image)');background-size:contain;background-repeat:no-repeat;height:20px;width:20px;background-position:center"></td>

                                <td>
                                    <div class="btn-group ">
                                        <a href="@Url.Action("Edit", "StudentTables", new { id = item.StudentID })" class="btn btn-primary fa fa-edit @edition "></a>
                                        <button class="btn btn-info btn-Details" data-id="@item.StudentID"><i class="fa fa-info"></i></button>
                                        <button class="btn btn-danger btn-delete @deletion " data-id="@item.StudentID"><i class="fa fa-trash "></i></button>
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
