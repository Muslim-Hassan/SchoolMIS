    <script src="~/Scripts/jquery-3.7.0.min.js"></script>

    <script type="text/javascript"></script>
    <script>
    $(document).ready(function () {
           //this is deletion section
       $('.btn-delete').click(function () {
         var id = $(this).data('id');
           $.ajax({

            url: '@Url.Action("Delete","StudentTables")',
            type: 'POST',
            data: { id: id },
            success: function (response) {
                if (response.success) {
                    // the D is for Deletion Specification
                    $('#input').val(response.data.StudentID);
                    $('#DRollNo').text(response.data.RollNO);
                    $('#DStudentName').text(response.data.Name);
                    $('#DFatherName').text(response.data.FatherName);
                    $('#DGrandFatherName').text(response.data.GrandFatherName);
                    $('#DIdentityID').text(response.data.IdentityID);
                    $('#DContact').text(response.data.Contact);
                    $('#DStudentType').text(response.data.StudentType);
                    $('#DDOB').text(response.data.DOB);
                    $('#DDate').text(response.data.RegistrationDate);
                    $('#DNativeLanguage').text(response.data.NativeLanguage);
                    $('#DBrother').text(response.data.Brother);
                    $('#DC_Address').text(response.data.CurrentAddress);
                    $('#DP_Address').text(response.data.PermenentAddress);
                    $('#DClass').text(response.data.classID);
                    $('#DNationality').text(response.data.Nationality);
                    $('#DGender').text(response.data.Gender);
                    $('#DFatherJob').text(response.data.FatherJob);
                    $('#DUncle').text(response.data.Uncle);
                    $('#DimgShow').attr('src', response.data.Image);
                    //modal show
                    $('#deleteModal').modal('show');
                } else {
                    $("#resultMessage").html("<div class='alert alert-success'>" + response.msg + "</div>");
                }
            },
            error: function () {
              alert("errore")
            }
        });

       });
       //------------------------------ConfirmDeletion
       $('#submitbtn').click(function (e) {
          e.preventDefault();  // Prevent the default form submission
          var id=parseInt($('#input').val());
           $.ajax({
               url: '@Url.Action("ConDelete", "StudentTables")',
               type: 'POST',
               data: { id: id },  // Send the serialized data
               success: function (response) {
                   $("#resultMessage").html("<div class='alert alert-success'>" + "معلومات په کامیابۍ سره ختم شول" + "</div>");
                   window.location.href = response.redirectUrl;
        },
        error: function () {
            alert("error occured");
        }
    });
});
 //this is for detail----------------------------------
        $('.btn-Details').click(function () {
            var id = $(this).data('id');
            $.ajax({
                url: '@Url.Action("Details", "StudentTables")',
                type: 'POST',
                data: { id: id },
                success: function (response) {
                    if (response.success) {

                        $('#header').text(response.data.Name);
                        $('#RollNo').text(response.data.RollNO);
                        $('#StudentName').text(response.data.Name);
                        $('#FatherName').text(response.data.FatherName);
                        $('#GrandFatherName').text(response.data.GrandFatherName);
                        $('#IdentityID').text(response.data.IdentityID);
                        $('#Contact').text(response.data.Contact);
                        $('#StudentType').text(response.data.StudentType);
                        $('#DOB').text(response.data.DOB);
                        $('#Date').text(response.data.RegistrationDate);
                        $('#NativeLanguage').text(response.data.NativeLanguage);
                        $('#Brother').text(response.data.Brother);
                        $('#C_Address').text(response.data.CurrentAddress);
                        $('#P_Address').text(response.data.PermenentAddress);
                        $('#Class').text(response.data.classID);
                        $('#Nationality').text(response.data.Nationality);
                        $('#Gender').text(response.data.Gender);
                        $('#FatherJob').text(response.data.FatherJob);
                        $('#Uncle').text(response.data.Uncle);


                        $('#imgShow').attr('src', response.data.Image);




                        // Show the modal
                        $('#detailsModal').modal('show');
                    } else {
                        alert("errore occurd")
                    }
                },
                error: function () {
                    alert('An error occurred while fetching the details.');
                }
            });
        });
});
    </script>
