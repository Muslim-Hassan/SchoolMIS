@model IEnumerable<SchoolMIS.Models.ScheduleTable>
@{
    String Actions = "hidden";
    String creation = "hidden";


    if (Session["UserId"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
    else
    {

        if (Session["UserType"].ToString() == "admin" || Session["UserType"].ToString() == "Admin" || Session["UserType"].ToString() == "ادمین" || Session["UserType"].ToString() == "اډمین")
        {


            creation = "show";
            Actions = "show";


        }
     

    }
}
<style>
    .right{float:right;}
    .left{float:left;}
</style>
<div class="d-flex justify-content-md-between pt-2">
    <h4><b>د  استاذانو تقسیم اوقات </b></h4>
    <p class="btn btn-group">
        <a href="@Url.Action("Dashboard","Home")" class="btn btn-primary"> کور صفحه</a>
        <a href="@Url.Action("Create")" class="btn btn-success @creation"> نوی معلومات اضافه کړئ</a>
    </p>
    <h4><b>Schedule of Teachers </b></h4>

</div>

<div class="card shadow  pre-scrollable ">

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-active">
                    <tr>
                        <th>استاذ</th>
                        <th> صنف </th>
                        <th> مضمون</th>
                        <th>ورځ</th>
                        <th>کریډیټ</th>
                        <th>شروع</th>
                        <th>ختم </th>
                        <th>تاریخ </th>
                        <th class="@Actions">Action </th>
                    </tr>
                </thead>
                <tfoot class="table-active">
                    <tr>
                        <th>استاذ</th>
                        <th> صنف </th>
                        <th> مضمون</th>
                        <th>ورځ</th>
                        <th>کریډیټ</th>
                        <th>شروع</th>
                        <th>ختم </th>
                        <th>تاریخ </th>
                        <th class="@Actions">Action </th>
                    </tr>
                </tfoot>
                <tbody id="tbody">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StaffTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubjectTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Day)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Credit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StartTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EndTime)
                            </td>
                            <td>
                                @SchoolMIS.Models.Converssion.ToShamsi(item.Date)
                            </td>
                            <td class="@Actions">
                                <div class="btn-group">
                                    @Html.ActionLink(" ", "Edit", "ScheduleTables", new { id = item.ScheduleID }, new { @class = "btn btn-primary fa fa-edit" })
                                    @*<button class="btn btn-info btn-Details" data-id="@item.ScheduleID"><i class="fa fa-info"></i></button>*@
                                    <button class="btn btn-danger btn-delete" data-id="@item.ScheduleID"><i class="fa fa-trash"></i></button>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@* delete model*@
<div id="deleteModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white d-flex justify-content-between align-content-center border-dark">
                <img src="~/Content/image/logo1.jpg" style="width:40px;border-radius:50%;" />

                <h4 class="modal-title text-center px-2"><b> ایا غواړی  تقسیم اوقات  معلومات لمنځه یوسی؟</b></h4>


            </div>
            <div class="modal-body">
                @* this is alert section*@
                <div id="resultMessage"></div>
                <div class="row">
                    <div class="col-6 card p-3 shadow">
                        <p><span id="DDate" class="left"></span><strong class="right">تاریخ :  </strong> </p>
                        <hr class="m-0 p-0" />
                        <p><span id="DClass" class="left"></span><strong class="right">صنف :  </strong> </p>
                        <hr class="m-0 p-0" />
                        <p> <span id="DCredit" class="left"></span><strong class="right">کریډیټ : </strong></p>
                        <hr class="m-0 p-0" />
                        <p> <span id="DEndTime" class="left"></span><strong class="right">ختم وخت : </strong></p>
                    </div>
                    <div class="col-6 card p-3 shadow">

                        <p><span id="DDay" class="left"></span><strong class="right">ورځ :</strong> </p>
                        <hr class="m-0 p-0" />
                        <p><span id="DStaff" class="left"></span><strong class="right">استاذ :</strong> </p>
                        <hr class="m-0 p-0" />
                        <p><span id="DSubject" class="left"></span><strong class="right">مضمون :</strong> </p>
                        <hr class="m-0 p-0" />
                        <p><span id="DStartTime" class="left"></span><strong class="right">شروع وخت :</strong> </p>

                    </div>

                </div>

            </div>
            <div class="modal-footer bg-danger text-white">
                <form id="deleteForm">
                    <input type="hidden" id="input" />
                    <button type="submit" class="btn btn-primary" id="submitbtn">هو</button>
                </form>
                <button type="button" class="btn btn-secondary pe-2" data-bs-dismiss="modal"> نه</button>
            </div>
        </div>
    </div>
</div>

