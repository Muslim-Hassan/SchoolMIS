@model SchoolMIS.Models.AdvancementTable
<link href="~/Content/custom/customCSS.css" rel="stylesheet" />
<body>
    <div class="container-fluid p-2">
        <div class="row">
            <div class="d-flex justify-content-md-between pt-2 pb-4">
                <h4><b>Add Student Improvement د شاګردانو ارتقا  اضافه کول</b></h4>
                <h4><b>Create Advancement of  Student </b></h4>

            </div>
        </div>

        @*this is alert section*@
        <div id="resultMessage"></div>
        <div class="card p-4">
            <form id="AdvancementForm" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-8">
                        <div class="row">
                            <div class="col-6">

                                <div class="form-group">
                                    <p class="control-label me-3  mb-0">Student شاګرد</p>
                                    <div class="col-md-12">
                                        @Html.DropDownList("StudentID", null, htmlAttributes: new { @id = "StudentID", @class = "form-control" })

                                    </div>
                                </div>
                                <div class="form-group">
                                    <p class="control-label me-3  mb-0">From the class د صنف څخه</p>
                                    <div class="col-md-12">
                                        @*@Html.DropDownList("FromClassID", null, htmlAttributes: new { @id = "FromClassID", @class = "form-control" })*@
                                        <select type="text" name="FromClassID" id="FromClassID" class="form-control" style="width:100%">
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <p class="control-label me-3  mb-0">To the Class صنف ته</p>
                                    <div class="col-md-12">
                                        @Html.DropDownList("ToClassID", null, htmlAttributes: new { @class = "form-control" })

                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <p class="control-label me-3  mb-0">Teacher استاذ</p>
                                    <div class="col-md-12">
                                        @Html.DropDownList("StaffID", null, htmlAttributes: new { @class = "form-control" })

                                    </div>
                                </div>

                                <div class="form-group">
                                    <p class="control-label me-3  mb-0">Marks نمری</p>
                                    <div class="col-md-12">


                                        <input type="number" readonly name="StudentScore" id="StudentScore" class="form-control" />

                                    </div>
                                </div>
                                <div class="form-group">
                                    <p class="control-label me-3  mb-0"> تاریخ</p>
                                    <div class="col-md-12">
                                        <input type="text" id="Date" name="Date" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="form-group">
                                <div class="btn-group  col-12 ">
                                    <a href="@Url.Action("Index","AdvancementTables")" class="btn  btn-outline-success border-bottom-success"> لیست ته شاتګ</a>
                                    <button type="submit" class="btn btn-primary">  معلومات  بیارغول</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="row ms-1 border-1 mt-4">
                            <img src="~/Content/image/promotion.png" id="hideImage" style="width: 100%; height: 265px; border-radius: 5%; " />
                        </div>
                    </div>

                </div>
            </form>
        </div>

    </div>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @section Scripts {
        @Scripts.Render("~/bundles/persianDatepicker")

        <script>
            $(document).ready(function () {

                $("#Date").persianDatepicker({
                    format: 'YYYY/MM/DD',
                    autoClose: true
                });
            });
        </script>
    }
    <script>
        $(document).ready(function () {


        $("#StudentID").on('change', function () {

            var studentID = $("#StudentID").val();

         if (studentID) {
        $.ajax({
            url: '@Url.Action("ClassName", "AdvancementTables")',
            type: "Post",
            data: { id: studentID},
            success: function (response) {

                if (response != null) {
                    $("#FromClassID").empty().append($('<option value=""> ټولګی وټاکئ</option>'));
                    $.each(response.data.ClassName, function (i, item) {
                        $("#FromClassID").append($("<option>", {
                            value: item.Value,
                            text: item.Text
                        }));
                    });
                } else {
                    $("#SubjectID").append($("<option>", {

                        text: "class پیدا نشو"
                    }));
                }
            },
            error: function () {
                alert("errore");
            }


        })
    } else {
        alert("also erroer");
    }


})




       $("#FromClassID").on('change', function () {

     var studentID = $("#StudentID").val();
           var classID = $("#FromClassID").val();

     if (studentID) {
         $.ajax({
             url: '@Url.Action("Score", "AdvancementTables")',
             type: "get",
             data: { id: studentID ,classID:classID},
             success: function (response) {


                 $("#StudentScore").val(response.data.score)
             },
             error: function () {
                 alert("errore");
             }


         })
     } else {
         alert("also erroer");
     }


 })












        $("#AdvancementForm").validate({
            rules: {
                StudentID: {
                    required: true,
                },
                Date: {
                    required: true,

                },
                StudentScoreID: {
                    required: true,
                    number: true

                },
                Staff: {
                    required: true,
                    number: true
                },
                FromClass: {
                    required: true,

                },
            },
            submitHandler: function (form) {

                var formData = new FormData(form);

                $.ajax({
                    url: '@Url.Action("Create", "AdvancementTables")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            $("#resultMessage").html("<div class='alert alert-success'>" + response.msg + "</div>");
                            $("#AdvancementForm")[0].reset();
                            window.location.href = response.redirectUrl;
                        } else {
                            $("#resultMessage").html("<div class='alert alert-danger'>" + response.msg + "</div>");
                        }
                    },
                    error: function () {
                        $("#resultMessage").html("<div class='alert alert-danger'>An error occurred.</div>");
                    }

                });
            }
        });

    });

    </script>

</body>

