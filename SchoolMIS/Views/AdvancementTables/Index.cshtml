@model IEnumerable<SchoolMIS.Models.AdvancementTable>
<div class="d-flex justify-content-md-between pt-2">
    <h4><b>د  شاګردانو ارتقا </b></h4>

    <p class="btn btn-group">
        @Html.ActionLink("   کور صفحه ", "Dashboard", "Home", null, new { @class = "btn btn-primary" })
        @Html.ActionLink(" نوی معلومات اضافه کړئ", "Create", "AdvancementTables", null, new { @class = "btn btn-success" })


    </p>
    <h4><b>Advancement of Student </b></h4>
</div>
<style>
    .left{
       float:left;
    }
    .right{
        float:right;
    }
  
</style>

<div class="card shadow  pre-scrollable ">

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-active">
                    <tr>
                        <th>اساس</th>
                        <th>شاګرد</th>
                        <th>د صنف څخه</th>
                        <th>صنف ته</th>
                        <th>استاذ</th>
                        <th>تاریخ</th>
                        <th>نمری </th>
                        <th>Action </th>
                    </tr>
                </thead>
                <tfoot class="table-active">
                    <tr>
                        <th>اساس</th>
                        <th>شاګرد</th>
                        <th>د صنف څخه</th>
                        <th>صنف ته</th>
                        <th>استاذ</th>
                        <th>تاریخ</th>
                        <th>نمری </th>
                        <th>Action </th>
                    </tr>
                </tfoot>
                <tbody id="tbody">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentTable.RollNO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassTable1.Name)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.StaffTable.Name)
                            </td>
                            <td>
                                @SchoolMIS.Models.Converssion.ToShamsi(item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentScore)
                            </td>
                            <td>
                                <div class="btn-group">
                                    @Html.ActionLink(" ", "Edit", "AdvancementTables", new { id = item.AdvancementID }, new { @class = "btn btn-primary fa fa-edit" })
                                    @*<button class="btn btn-info btn-Details" data-id="@item.AdvancementID"><i class="fa fa-info"></i></button>*@
                                    <button class="btn btn-danger btn-delete" data-id="@item.AdvancementID"><i class="fa fa-trash"></i></button>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@* delete model*@
<div id="deleteModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white d-flex justify-content-between align-content-center border-dark">
                <img src="~/Content/image/logo1.jpg" style="width:40px;border-radius:50%;" />

                <h4 class="modal-title text-center px-2"><b> ایاغواړی شاګرد د ارتقا  معلومات لمنځه یوسی؟</b></h4>


            </div>
            <div class="modal-body">
                @* this is alert section*@
                <div id="resultMessage"></div>
                <div class="row">

                    <div class="col-6 card p-3 shadow">

                        <p><span id="DStaff" class="left"></span><strong class="right">استاذ :</strong> </p>
                        <hr class="m-0 p-0" />
                        <p><span id="DFromClass" class="left"></span><strong class="right">صنف څخه : </strong> </p>
                       
                        <hr class="m-0 p-0" />
                        <p><span id="DDate" class="left"></span><strong class="right">تاریخ :</strong> </p>

                    </div>
                    <div class="col-6 card p-3 shadow">
                        <p><span id="DStudent" class="left"></span><strong class="right">شاګرد :</strong> </p>
                        <hr class="m-0 p-0" />
                        <p><span id="DToClass" class="left"></span><strong class="right">صنف ته :  </strong> </p>
                        <hr class="m-0 p-0" />
                        <p> <span id="DScore" class="left"></span><strong class="right">نمری : </strong></p>
                    </div>

                </div>

            </div>
            <div class="modal-footer bg-danger text-white">
                <form id="deleteForm">
                    <input type="hidden" id="input" />
                    <button type="submit" class="btn btn-primary" id="submitbtn">هو</button>
                </form>
                <button type="button" class="btn btn-secondary pe-2" data-bs-dismiss="modal"> نه</button>
            </div>
        </div>
    </div>
</div>

