@model IEnumerable<SchoolMIS.Models.ClassSubjectTable>


<div class="d-flex justify-content-md-between pt-2 ">
    <h4><b>Classes`s Subjects Information د صنفونو مضامینو معلومات</b></h4>

    <p class="btn btn-group">

        @Html.ActionLink("Home Page کور صفحه ", "Dashboard", "Home", null, new { @class = "btn btn-primary" })
        @Html.ActionLink("Add new Information نوی معلومات اضافه کړئ", "Create", null, new { @class = "btn btn-success" })
    </p>
    <h4><b>Class Subject  Information</b></h4>

</div>
<style>
    .left {
        float: left;
    }

    .right {
        float: right;
    }
</style>

<div class="card shadow  pre-scrollable">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-active">
                    <tr>
                        <th>شماره</th>
                        <th>صنف</th>
                        <th>مضمون</th>
                     
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot class="table-active">
                    <tr>
                        <th>شماره</th>
                        <th>صنف</th>
                        <th>مضمون</th>

                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody id="tbody">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassSubjectID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubjectTable.Name)
                            </td>
                         
                            <td>
                                <div class="btn-group">
                                    @Html.ActionLink(" ", "Edit", "ClassSubjectTables", new { id = item.ClassSubjectID }, new { @class = "btn btn-primary fa fa-edit" })
                                    @*<button class="btn btn-info btn-Details" data-id="@item.UserID"><i class="fa fa-info"></i></button>*@
                                    <button class="btn btn-danger btn-delete" data-id="@item.ClassSubjectID"><i class="fa fa-trash"></i></button>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@* delete model*@
<div id="deleteModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white d-flex justify-content-between align-content-center border-dark">

                <img src="~/Content/image/logo1.jpg" style="width:40px;border-radius:50%;" />
                <h4 class="modal-title text-center px-2"><b> ایا غواړی چی صنف مضامین لمنځه یوسی؟</b></h4>


            </div>
            <div class="modal-body px-4">
                @* this is alert section*@
                <div id="resultMessage"></div>
                <div class="row">

                    <div class="col-md-12 ">

                        <p><span id="ClassSubjectID" class="left"></span><strong class="right">شماره :</strong> </p>
                        <hr /><br />
                        <p><span id="ClassName" class="left"></span><strong class="right">صنف :</strong> </p>
                        <hr /><br />
                        <p> <span id="SubjectName" class="left"></span><strong class="right">مضمون :</strong></p>
                

                    </div>
                </div>

            </div>
            <div class="modal-footer bg-danger text-white">
                <form id="deleteForm">
                    <input type="hidden" id="input" />
                    <button type="submit" class="btn btn-primary" id="submitbtn">هو</button>
                </form>
                <button type="button" class="btn btn-secondary pe-2" data-bs-dismiss="modal"> نه</button>
            </div>
        </div>
    </div>
</div>

