@model IEnumerable<SchoolMIS.Models.UserTypeTable>

<div class="d-flex justify-content-md-between  py-2">
    <h4><b>د استعمالوونکی د ډول معلومات</b></h4>

    <p class="btn btn-group">
        @Html.ActionLink("   کور صفحه ", "Dashboard", "Home", null, new { @class = "btn btn-primary" })
        @Html.ActionLink(" نوی معلومات اضافه کړئ", "Create", null, new { @class = "btn btn-success" })

    </p>
    <h4><b>User Type Information</b></h4>
</div>
<div>
    <!-- DataTales Example -->
    <div class="card shadow  pre-scrollable">
       
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-active">
                        <tr>
                            <th>شماره</th>
                            <th> ډول</th>
                            <th>تشریح</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot class="table-active">
                        <tr>
                            <th>شماره</th>
                            <th> ډول</th>
                            <th>تشریح</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody id="tbody">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserTypeID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Type)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    <div class="btn-group">
                                        @Html.ActionLink(" ", "Edit", "UserTypeTables", new { id = item.UserTypeID }, new { @class = "btn btn-primary fa fa-edit" })
                                        @*<button class="btn btn-info btn-Details" data-id="@item.UserID"><i class="fa fa-info"></i></button>*@
                                        <button class="btn btn-danger btn-delete" data-id="@item.UserTypeID"><i class="fa fa-trash"></i></button>
                                    </div>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>





@* delete model*@
<div id="deleteModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white d-flex justify-content-between align-content-center border-dark">
                <img src="~/Content/image/logo1.jpg" style="width:40px;border-radius:50%;" />

             <h4 class="modal-title text-center px-2"><b> ایا غواړی چی استعمالوونکی ډول لمنځه یوسی؟</b></h4>


            </div>
            <div class="modal-body px-4">

                @* this is alert section*@
                <div id="resultMessage"></div>
                <p><span id="Type"  style="float:left;"></span><strong style="float:right;">استعمالوونکی ډول :</strong> </p>
                <hr />
                <p> <span id="Description"  style="float: left;"></span><strong style="float:right"> تشریح :</strong></p>
                <hr />

            </div>
            <div class="modal-footer bg-danger text-white">
                <form id="deleteForm">
                    <input type="hidden" id="input" />
                    <button type="submit" class="btn btn-primary" id="submitbtn">هو</button>
                </form>
                <button type="button" class="btn btn-secondary pe-2" data-bs-dismiss="modal"> نه</button>
            </div>
        </div>
    </div>
</div>
