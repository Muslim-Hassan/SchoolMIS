         $.ajax({
             url: '@Url.Action("Delete", "UserTypeTables")',
             type: 'POST',
             data: { id: id },
             success: function (response) {
                 if (response.success) {
                     $('#user').text(response.data.Type);
                     $('#Type').text(response.data.Type);
                     $('#Description').text(response.data.Description);
