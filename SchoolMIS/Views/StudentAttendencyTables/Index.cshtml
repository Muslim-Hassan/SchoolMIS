@model IEnumerable<SchoolMIS.Models.StudentAttendencyTable>
@{
    String Actions = "hidden";
    String creation = "hidden";

    if (Session["UserId"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
    else
    {

        if (Session["UserType"].ToString() == "admin" || Session["UserType"].ToString() == "Admin" || Session["UserType"].ToString() == "ادمین" || Session["UserType"].ToString() == "اډمین")
        {

            Actions = "show";
            creation = "show";


        }
        else
        {

            creation = "show";

        }

    }
}
<style>
    .left{float:left;}
    .right {
        float: right;
    }
</style>
<div class="d-flex justify-content-md-between pt-2">
    <h4><b>د  شاګردانو حاضری </b></h4>

    <p class="btn btn-group">
        <a href="@Url.Action("Dashboard","Home")" class="btn btn-primary"> کور صفحه</a>
        <a href="@Url.Action("Create","StudentAttendencyTables")" class="btn btn-success @creation"> نوی معلومات اضافه کړئ</a>

    </p>
    <h4><b>Attendency of Student </b></h4>
</div>

<div class="card shadow  pre-scrollable ">

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="table-active">
                    <tr>
                        <th>اساس</th>
                        <th>شاګرد</th>
                        <th>صنف</th>
                        <th>استاذ</th>
                        <th>Date</th>
                        <th>میاشت </th>
                        <th>رسمی ورځی </th>
                        <th>حاضر </th>
                        <th class="@Actions">Action </th>
                    </tr>
                </thead>
                <tfoot class="table-active">
                    <tr>
                        <th>اساس</th>
                        <th>شاګرد</th>
                        <th>صنف</th>
                        <th>استاذ</th>
                        <th>Date</th>
                        <th>میاشت </th>
                        <th>رسمی ورځی </th>
                        <th>حاضر </th>
                        <th class="@Actions">Action </th>
                    </tr>
                </tfoot>
                <tbody id="tbody">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentTable.RollNO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StudentTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClassTable.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StaffTable.Name)
                            </td>
                            <td>
                                @SchoolMIS.Models.Converssion.ToShamsi(item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Month)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FormalDays)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Present)
                            </td>
                            <td class="@Actions">
                                <div class="btn-group ">
                                    <a href="@Url.Action("Edit", "StudentAttendencyTables", new { id = item.StudentAttendencyID })" class="btn btn-primary fa fa-edit "></a>

                                    @*<button class="btn btn-info btn-Details" data-id="@item.StudentAttendencyID"><i class="fa fa-info"></i></button>*@
                                    <button class="btn btn-danger btn-delete" data-id="@item.StudentAttendencyID"><i class="fa fa-trash"></i></button>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@* delete model*@
<div id="deleteModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white d-flex justify-content-between align-content-center border-dark">
                <img src="~/Content/image/logo1.jpg" style="width:40px;border-radius:50%;" />

                <h4 class="modal-title text-center px-2"><b> ایا شاګرد د حاضری  معلومات لمنځه یوسی؟</b></h4>


            </div>
            <div class="modal-body">
                @* this is alert section*@
                <div id="resultMessage"></div>
                <div class="row">

                    <div class="col-6 card p-3 shadow">

                        <p><span id="DStaff" class="left"></span><strong class="right">استاذ :</strong> </p>
                        <hr class="m-0 p-0" />
                        <p><span id="DMonth" class="left"></span><strong class="right">میاشت : </strong> </p>
                        <hr class="m-0 p-0"  />
                        <p><span id="DDate" class="left"></span><strong class="right">تاریخ :</strong> </p>

                    </div>
                    <div class="col-6 card p-3 shadow">
                        <p><span id="DStudent" class="left"></span><strong class="right">شاګرد :</strong> </p>
                        <hr class="m-0 p-0" />
                        <p><span id="DFormalDay" class="left"></span><strong class="right">رسمی ورځی :  </strong> </p>
                        <hr class="m-0 p-0" />
                        <p> <span id="DPresent" class="left"></span><strong class="right">حاضری ورځی : </strong></p>
                    </div>

                </div>

            </div>
            <div class="modal-footer bg-danger text-white">
                <form id="deleteForm">
                    <input type="hidden" id="input" />
                    <button type="submit" class="btn btn-primary" id="submitbtn">هو</button>
                </form>
                <button type="button" class="btn btn-secondary pe-2" data-bs-dismiss="modal"> نه</button>
            </div>
        </div>
    </div>
</div>

