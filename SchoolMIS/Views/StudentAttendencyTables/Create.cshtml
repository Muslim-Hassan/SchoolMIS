    <script>
        $(document).ready(function () {

            $("#ClassID").on('change', function () {
                var classID = $("#ClassID").val();

                if (classID) {
                    $.ajax({
                        url: '@Url.Action("getClass", "StudentAttendencyTables")',
                        type: "get",
                        data: { classID: classID },
                        success: function (response) {

                            $("#StaffID").empty().append($('<option value=""> استاذ وټاکئ </option>'));
                            $("#StudentID").empty().append($('<option value=""> شاګرد وټاکئ</option>'));
                            if (response != null) {
                                $.each(response.StudentList, function (i, item) {
                                    $("#StudentID").append($("<option>", {
                                        value: item.Value,
                                        text: item.Text
                                    }));
                                });
                            } else {
                                $("#StudentID").append($("<option>", {

                                    text: "شاګردان پیدا نشو"
                                }));
                            }
                            if (response != null) {
                                $.each(response.Staff, function (i, item) {
                                    $("#StaffID").append($("<option>", {
                                        value: item.Value,
                                        text: item.Text
                                    }));
                                });
                            } else {
                                $("#StaffID").append($("<option>", {

                                    text: "شاګردان پیدا نشو"
                                }));
                            }
                        },
                        error: function () {
                            alert("errore");
                        }


                    })
                } else {
                    alert("also erroer");
                }


            });

















        $("#StudentAttendencyForm").validate({
            rules: {
                StudentID: {
                    required: true,
                },
                Date: {
                    required: true,

                },
                StaffID: {
                    required: true,
                },

                FormalDays: {
                    required: true,
                    number: true
                },
                Present: {
                    required: true,
                    number: true
                },
            },
            submitHandler: function (form) {

                var formData = new FormData(form);

                $.ajax({
                    url: '@Url.Action("Create", "StudentAttendencyTables")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            $("#resultMessage").html("<div class='alert alert-success'>" + response.msg + "</div>");
                            $("#StudentAttendencyForm")[0].reset();
                            window.location.href = response.redirectUrl;
                        } else {
                            $("#resultMessage").html("<div class='alert alert-danger'>" + response.msg + "</div>");
                        }
                    },
                    error: function () {
                        $("#resultMessage").html("<div class='alert alert-danger'>An error occurred.</div>");
                    }

                });
            }
        });

        });





    function GVMonth() {
        var Month = $("#Month").val();

        if (Month == "حمل" || Month == "ثور" || Month == "جوزا" || Month == "سرطان" || Month == "اسد" || Month == "سنبله") {

            $("#FormalDays").val(31).text(31);
        } else if (Month == "حوت") {
            $("#FormalDays").val(29).text(29);
        } else {
            $("#FormalDays").val(30).text(30);
        }




    }




    </script>

</body>
