                                @*@Html.DropDownList("StaffID", null, htmlAttributes: new { @id = "staffID", @class = "form-control" })*@
                                <select type="text" name="StaffID" id="StaffID" class="form-control" style="width:100%">
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <p class="control-label me-3  mb-0">شاګرد</p>
                            <div class="col-md-12">

                                @*@Html.DropDownList("StudentID", null, htmlAttributes: new { @id = "StudentID", @class = "form-control" })*@
                                <select type="text" name="StudentID" id="StudentID" class="form-control" style="width:100%">
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <p class="control-label me-3  mb-0">میاشت</p>
                            <div class="col-md-12">
                                <select type="text" name="Month" id="Month" class="form-control" style="width:100%" onchange="GVMonth()">
                                    <option value="حمل">حمل</option>
                                    <option value="ثور">ثور</option>
                                    <option value="جوزا">جوزا</option>
                                    <option value="سرطان">سرطان</option>
                                    <option value="اسد">اسد</option>
                                    <option value="سنبله">سنبله</option>
                                    <option value="میزان">میزان</option>
                                    <option value="عقرب">عقرب</option>
                                    <option value="قوس">قوس</option>
                                    <option value="جدی">جدی</option>
                                    <option value="دلو">دلو</option>
                                    <option value="حوت">حوت</option>

                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <p class="control-label me-3  mb-0">رسمی ورځی</p>
                            <div class="col-md-12">
                                <input type="number" name="FormalDays" value="31" id="FormalDays" class="form-control" style="width:100%" />
                            </div>
                        </div>
                        <div class="form-group">
                            <p class="control-label me-3  mb-0"> حاضر</p>
                            <div class="col-md-12">
                                <input type="number" name="Present" id="Present" class="form-control" style="width:100%" />
                            </div>
                        </div>
                        <div class="form-group">
                            <p class="control-label me-3  mb-0"> تاریخ</p>
                            <div class="col-md-12">
                                <input type="text" name="Date" id="Date" class="form-control" style="width:100%" />
                            </div>
                        </div>
                        <div class="form-group mt-4 pt-3">
                            <div class="btn-group  col-12 ">
                                <a href="@Url.Action("Index","StudentAttendencyTables")" class="btn  btn-outline-success border-bottom-success">   شاتګ</a>
                                <button type="submit" class="btn btn-primary">   اضافه کړئ</button>
                            </div>
                        </div>

                    </div>
                    <div class="col-4">
                        <div class="row ms-1 border-1 mt-4">
                            <img src="~/Content/image/attendency2.jpg" style="width: 100%; height: 275px; border-radius: 5%; " />
                        </div>
                    </div>

                </div>
            </form>
        </div>

    </div>

    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
