                <h4><b>Create  Attendency Of Student</b></h4>

            </div>
        </div>

        @*this is alert section*@
        <div id="resultMessage"></div>
        <div class="card p-4">
            <form id="StudentAttendencyForm" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <p class="control-label me-3 me-3 mb-0">صنف</p>
                            <div class="col-md-12">
                                @Html.DropDownList("ClassID", null, "ټولګی وټاکئ   ", htmlAttributes: new { @id = "ClassID", @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <p class="control-label me-3 me-3 mb-0">استاذ</p>
